<h1>Comments</h1>

<ul>
    <% @comments.each do |comment| %>
        <li>
            <strong> <%= comment.content %> </strong> - <%= comment.user_id %> </strong> - <%= comment.movie_id %> 
            
            <%= link_to "Edit this comment!", edit_comment_path(@comments) %>
			<%= link_to "Delete this Comment!", :comments, method: :destroy, data: { confirm: "Are you sure you want to delete this comment?"} %>


        </li>
    <% end %>
</ul>