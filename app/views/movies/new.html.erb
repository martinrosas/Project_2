<h1>Add a new Movie!</h1>

<%= form_for @movie do |f| %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :runtime %>
        <%= f.text_field :runtime %>
    </div>

    <div>
        <%= f.label :genre %>
        <%= f.text_field :genre %>
    </div>

    <%= f.submit "Add new Movie!" %>

<% end %>

<%= link_to "Back to the list!", movies_path %>