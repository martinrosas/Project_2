<h1> <%= @movie.title %> </h1>

<p><%= @movie.description %> <%= @movie.runtime %>  <%= @movie.genre %> </p>
<p>Comments</p>
<ul>
<% @movie.comments.each do |comment| %>
<li>
<%= comment.content %>
</li>
<%end%>
</ul>

<p> Add a comment</p>
<%= form_for @comment do |f| %>
 <%= f.hidden_field :movie_id %>
    <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>


    <%= f.submit "Add new comment" %>

<% end %>
<%= link_to "Delete this movie!", :movie, method: :delete, data: { confirm: "Are you sure you want to delete this movie?"} %>

<%= link_to "Back to the list!", movies_path %>
