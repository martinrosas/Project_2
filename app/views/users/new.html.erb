<h1>Sign Up Now!</h1>

<%= form_for @user do |f| %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>
<div class ="signup">
    <%= f.label :name %>
    <%= f.text_field :name %></br></br>

    <%= f.label :email %>
    <%= f.email_field :email %></br></br>


    <%= f.label :password %>
    <%= f.password_field :password %></br></br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit  "Register" %>
<% end %>
</div>
